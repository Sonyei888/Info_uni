<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_completo"
    android:orientation="vertical"
    tools:context=".AdminVerNoticias">

    <ImageView
        android:id="@+id/regresarveradmin"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:onClick="regresarveradmin"
        android:paddingLeft="280dp"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="casual"
        android:text="Noticias"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#448AFF"
        android:backgroundTint="#448AFF"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lista_ver_noticias_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/menu_añadir_noticia"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:onClick="añadirnoticia"
            android:paddingLeft="280dp"
            app:srcCompat="@drawable/baseline_add_24v2"
            android:contentDescription="TODO" />
    </LinearLayout>


</LinearLayout>